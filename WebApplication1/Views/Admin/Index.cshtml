@model IEnumerable<WebApplication1.Models.ApplicationUser>

@{
    ViewBag.Title = "Administration";
}

<div style="margin-top: 30px" class="row adminheader">
    <h2><span>   Administration </span><i class="glyphicon glyphicon-cog"></i></h2>
</div>

<!--  THIS IS THE PANEL AREA - USEFUL INFO WILL BE SHOWN HERE   -->

<div class="row text-center">
    <div class="col-md-9 marginPanel panelBorder">
        <div class="row panelPadding" style="background-color: #51ab51!important;">
            <h3 class="whiteText"><i class="glyphicon glyphicon-list"></i> Overview</h3>
        </div>
       
     
    </div>
    <div class="col-md-2 marginPanel panelBorder">
        <div class="row text-center panelPadding" style="background-color:#5bc0de!important;">
            <i class="glyphicon glyphicon-time whiteText" style="font-size:50px;"></i>
        </div>
        <div class="row">
            <h3 id="timeArea"></h3>
        </div>

    </div>


</div>

<div style="margin-top: 30px " class="panel panel-default">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Access Failed Count
            </th>
            <th>
                Roles
            </th>
        </tr>

        @foreach (var st in Model)
        {
            var style = (st.AccessFailedCount > 5) ? "danger" : "success";
            <tr class="@style">
                <td>
                    @st.firstName
                </td>
                <td>
                    @st.lastName
                </td>
                <td>
                    @st.Email
                </td>
                <td>
                    @st.AccessFailedCount
                </td>
                <td>
                    // TODO

                </td>
            </tr>
        }


    </table>
</div>


<script>
    $(document).ready(function () {
        startTime();
    })
    function startTime() {
        var today = new Date();
        var h = today.getHours();
        var m = today.getMinutes();
        var s = today.getSeconds();
        m = checkTime(m);
        s = checkTime(s);
        document.getElementById('timeArea').innerHTML = '<strong>' + h + ":" + m + ":" + s + '</strong>';
        var t = setTimeout(function () { startTime() }, 500);
    }

    function checkTime(i) {
        if (i < 10) { i = "0" + i };  // add zero in front of numbers < 10
        return i;
    }

</script>
